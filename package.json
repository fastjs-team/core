{
  "name": "fastdev",
  "version": "1.0.0-pre-alpha.3",
  "description": "Fastjs-next is a useful, lightweight JavaScript library for any types of project.",
  "main": "index.js",
  "module": "dist/fastjs.esm-bundler.js",
  "types": "dist/types/main.d.ts",
  "unpkg": "dist/fastjs.global.js",
  "jsdelivr": "dist/fastjs.global.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/main.d.ts",
        "node": "./index.js",
        "default": "./dist/fastjs.esm-bundler.js"
      },
      "require": {
        "types": "./dist/types/main.d.ts",
        "node": "./index.cjs",
        "default": "./index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "index.cjs",
    "index.js",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "scripts": {
    "build-test": "rollup -c",
    "types": "tsc --declaration --declarationMap --emitDeclarationOnly --allowJs --emitDeclarationOnly --declarationDir dist/types",

    "dev": "npm run rm && rollup -cw",
    "build": "npm run rm && rollup -c && npm run types",
    "rm": "rm -rf ./dist",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --config jest.config.js",
    "prod": "npm run build && npm run test",

    "dev:windows": "npm run rm:windows && rollup -cw",
    "build:windows": "npm run rm:windows && rollup -c && npm run types",
    "rm:windows": "if exist dist rmdir /s/q dist",
    "test:windows": "cross-env-shell NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js",
    "prod:windows": "npm run build && npm run test:windows"
  },
  "bugs": {
    "url": "https://github.com/fastjs-team/fastjs-next/issues",
    "email": "xiaodong@indouyin.cn"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fastjs-team/fastjs-next.git"
  },
  "keywords": [
    "fastjs",
    "fastjs-next"
  ],
  "homepage": "https://fastjs.dev/",
  "author": "dy-xiaodong2022",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.11.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "cross-env": "^7.0.3"
  }
}
